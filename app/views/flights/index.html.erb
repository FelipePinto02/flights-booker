<h1>Flights Booker</h1>

<%= form_with model: @flights, url: '/flights', method: :get do |form| %>
  <div class="form-section">
    <%= form.label :departure_airport, 'Departure Airport:' %> <br>
    <%= form.select(:departure_airport_id, @departure_options) %>
  </div> <br>
  <div class="form-section">
    <%= form.label :arrival_airport, 'Arrival Airport:' %> <br>
    <%= form.select(:arrival_airport_id, @arrival_options) %>
  </div> <br>
  <div class="form-section">
    <%= form.label :date, 'Date:' %> <br>
    <%= form.select(:date, @date_options) %>
  </div> <br>
  <div class="form-section">
    <%= form.label :passengers, 'Passengers:' %> <br>
    <%= form.select(:passengers, @passengers_options) %>
  </div> <br>
  <div class="form-section">
    <%= form.submit 'Search' %> <br>
  </div> <br>
<% end %>

<% if params[:flight] %>
  <% if @flights.any? %>
    <% @flights.each do |flight| %>
      <p><%= flight.departure_airport.code %> <%= flight.arrival_airport.code %> </p>
    <% end %>
  <% else %>
    <p>No flights found.</p>
  <% end %>
<% end %>
